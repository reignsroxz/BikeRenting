@model BikeSharingApp.Models.Bike

@{
    ViewData["Title"] = "Delete Bike";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2>Delete Bike</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Are you sure you want to delete this bike?</h4>
                        <p>This action cannot be undone.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Bike Type</dt>
                        <dd class="col-sm-9">@Model.BikeType</dd>

                        <dt class="col-sm-3">Location</dt>
                        <dd class="col-sm-9">@Model.Location</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">@(Model.IsAvailable ? "Available" : "Not Available")</dd>

                        <dt class="col-sm-3">Owner</dt>
                        <dd class="col-sm-9">@Model.Owner.FullName</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="BikeID" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">Delete Bike</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>