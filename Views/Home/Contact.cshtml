@model BikeSharingApp.Models.Message

@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Contact Us</h2>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="Contact" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="GuestName" class="control-label">Name</label>
                            <input asp-for="GuestName" class="form-control" />
                            <span asp-validation-for="GuestName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="GuestEmail" class="control-label">Email</label>
                            <input asp-for="GuestEmail" class="form-control" />
                            <span asp-validation-for="GuestEmail" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="MessageText" class="control-label">Message</label>
                            <textarea asp-for="MessageText" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="MessageText" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Send Message</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h3>Our Location</h3>
                </div>
                <div class="card-body">
                    <h5>BikeSharing Headquarters</h5>
                    <p>123 Bike Street<br />Cycling City, CC 12345</p>
                    <p>Phone: (555) 123-4567<br />Email: info@bikesharing.com</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 