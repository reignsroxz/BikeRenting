@model BikeSharingApp.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2>Delete Review</h2>
                </div>
                <div class="card-body">
                    <h3>Are you sure you want to delete this review?</h3>
                    <div class="mt-4">
                        <dl class="row">
                            <dt class="col-sm-3">Rating</dt>
                            <dd class="col-sm-9">@Model.Rating/5</dd>
                            <dt class="col-sm-3">Review</dt>
                            <dd class="col-sm-9">@Model.ReviewText</dd>
                            <dt class="col-sm-3">Date</dt>
                            <dd class="col-sm-9">@Model.ReviewDate.ToString("MM/dd/yyyy")</dd>
                        </dl>
                    </div>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ReviewID" />
                        <input type="hidden" asp-for="BikeID" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-controller="Bike" asp-action="Details" asp-route-id="@Model.BikeID" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 